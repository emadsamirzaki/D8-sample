<div class="container mar-bottom-15">
  <div class="row">
    <div class="col-lg-10 col-lg-push-1">
      <div class="row">
        <div class="tag-section large text-center">
          <ul>
            <li><span>{{ node.getCreatedTime() | date("F j, Y") }}</span></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
{% if node.body.value %}
  <section class="container">
    <div class="row">
      <div class="col-lg-10 col-lg-push-1">
        <div class="universal-section-desc text-center">{{ content.body }}</div>
      </div>
    </div>
  </section>
{% endif %}

{% if node.field_description.value %}
  <section class="body-issue-wrapper row">
    <div class="container">
      <div class="row">
        {{ content.field_description }}
      </div>
    </div>
  </section>
{% endif %}

{% if more_case_studies %}
  <section class="home-page-news roadmap-resources row">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 col-lg-push-1">
          <div class="row">
            <h2 class="section-title text-center">More Case Studies</h2>
            {{ more_case_studies }}
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}