{% set imageURI = content.field_network_image['#items'].entity.uri.value %}

<a class="network-wrapper text-center"  href="{{ url }}">
  {% if imageURI %}
    {{ content.field_network_image }}
  {% else %}
    <img src="/{{ directory }}/assets/images/network/network.jpg" alt="Network" class="img-responsive">
  {% endif %}
  <h3 class="network-title">{{ node.getTitle() }}</h3>
</a>