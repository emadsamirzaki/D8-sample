<section class="home-page-mission row">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-lg-push-1">
        <div class="row">
          {% if paragraph.field_message_title.value %}
            <h2 class="section-title text-center">{{ content.field_message_title }}</h2>
          {% endif %}
          {% if paragraph.field_message_description.value %}
            <div class="section-desc text-center"> {{ content.field_message_description }} </div>
          {% endif %}
          <div class="mission-testomony flex-display">
            <div class="col-sm-10 col-md-8 mission-testomony-video-wrapper">
              <div class="row">
                {% if paragraph.field_message_youtube_video_id.value %}
                  <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{ paragraph.field_message_youtube_video_id.value }}?rel=0" frameborder="0" allowfullscreen></iframe>
                  </div>
                {% endif %}

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>